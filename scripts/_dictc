#compdef dictc

_external_look() {
	if [[ -n "$words" ]] && which look 2>/dev/null 1>&2; then
		compadd - $(look $words)
	fi
}

_arguments -A "-*" \
	'(- : *)'{-h,--help}'[show this help message and exit]' \
	'(- : *)'{-v,--version}"[show program's version number and exit]" \
	-c'[choose completion service]:completion:((qq bing dictcn spellcheck external))' \
	-d'[choose dictionary]:dictionary:((qq bing stardict))' \
	--nosound'[disable sound support]' \
	'*::look:_external_look'
	
